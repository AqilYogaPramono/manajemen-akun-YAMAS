<%- include('../../partials/headers/__header-dashbaord.ejs', { title: 'Periode Akun' }) %>
<%- include('../../partials/navs/__nav-admin.ejs') %>
<%- include('../../partials/messages/__messages-dashbaord.ejs') %>
<% const formatPeriodeDate = (value) => {
     if (!value) return '-'
     const date = new Date(value)
     const months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec']
     const month = months[date.getMonth()]
     const day = (`0${date.getDate()}`).slice(-2)
     const year = date.getFullYear()
     const hours = (`0${date.getHours()}`).slice(-2)
     const minutes = (`0${date.getMinutes()}`).slice(-2)
     const seconds = (`0${date.getSeconds()}`).slice(-2)
     return `${month} ${day} ${year} ${hours}:${minutes}:${seconds}`
} %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="card-header-inline mb-3">
                    <h4 class="card-title">Daftar Periode Akun</h4>
                    <a href="/admin/periode/buat" class="btn btn-primary btn-sm" data-loading>Tambah Periode</a>
                  </div>
                  <div>
                    <table class="table table-hover table-stacked">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Nama Pegawai</th>
                          <th>Periode Mulai</th>
                          <th>Periode Berakhir</th>
                          <th style="width: 200px;" class="text-right">Aksi</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (Array.isArray(periode) && periode.length) { %>
                          <% periode.forEach(function(item, idx){ %>
                            <tr>
                              <td data-label="No"><%= idx + 1 %></td>
                              <td data-label="Nama Pegawai"><%= item.nama || '-' %></td>
                              <td data-label="Periode Mulai"><%= formatPeriodeDate(item.periode_mulai) %></td>
                              <td data-label="Periode Berakhir"><%= formatPeriodeDate(item.periode_berakhir) %></td>
                              <td class="text-right" data-label="Aksi">
                                <div class="btn-actions">
                                  <a href="/admin/periode/edit/<%= item.id %>" class="btn btn-sm btn-outline-info" data-loading>Edit</a>
                                  <button type="button" class="btn btn-sm btn-outline-danger btn-delete" data-url="/admin/periode/hapus/<%= item.id %>">Hapus</button>
                                </div>
                              </td>
                            </tr>
                          <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="6" class="text-center empty-state">Belum ada data</td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-below-navbar" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Konfirmasi Hapus</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Apakah Anda yakin ingin menghapus data ini?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
        <button type="button" class="btn btn-danger" id="btnConfirmDelete">Hapus</button>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/scripts/__script-dashbord.ejs') %>